@page "/counter"
@inject ICounterStore Store

<h1>Counter</h1>
<p>Current count: @CurrentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    [Parameter]
    public long CurrentCount
    {
        get
        {
            return Store.Value;
        }
        set
        {
            Store.Dispatch(new CounterActionChangeValue(value));
        }
    }

    private void IncrementCount()
    {
        Store.Dispatch(new CounterActionIncrement());
    }
    private void DecrementCount()
    {
        Store.Dispatch(new CounterActionDecrement());
    }
}
